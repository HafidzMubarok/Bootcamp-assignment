<h1><%= title %></h1>

<div class="container d-flex flex-column p-5">
    <h2>Create Contact</h2>
    <form action="/create-contact" method="post">
        <div class="pt-3">
            <div class="mb-3">
                <label for="name" class="form-label required">Name</label>
                <input type="name" class="form-control" id="name" name="name" placeholder="Name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
            </div>
            <div class="mb-3">
                <label for="mobile" class="form-label">Phone Number</label>
                <input type="mobile" class="form-control" id="mobile" name="mobile" placeholder="08xxxxxxxxxx">
            </div>
        </div>
        <div class="pt-3">
            <a href="/contact" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>