<h1 class="border-secondary text-start"><%= title %></h1>

<div class="container mt-5">
    <h2>Contact List</h2>
    <div>
        <% if (!contacts.length) { %>
            <span>There is no contact yet!</span>
        <% }else { %>
            <div class="border rounded-2">
                <table class="table">
                    <!-- Table Header -->
                     <thead class="table-warning">
                         <tr>
                             <th class="px-4">NAME</th>
                             <th>Phone Number</th>
                         </tr>
                     </thead>
        
                    <!-- Table Data -->
                    <% contacts.forEach(contact => { %>
                        <tr>
                            <td class="px-4">
                                <a href="/contact/<%= contact.name %>" class="text-dark"><%= contact.name  %></a>
                            </td>
                            <td>
                                <span><%= contact.mobile  %></span>
                            </td>
                        </tr>
                    <% }) %>
                </table>
            </div>
        <% } %>
    </div>
</div>